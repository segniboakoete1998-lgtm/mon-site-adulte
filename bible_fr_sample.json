<!DOCTYPE html>import re
import json

# Chemin vers le fichier texte de la Bible LSG 1910
input_file = "segond1910.txt"
# Fichier JSON de sortie pour le jeu
output_file = "bible_fr.json"

# Liste pour stocker les versets
bible_data = []

# Exemple de format attendu dans le texte :
# Genèse 1:1 Au commencement, Dieu créa les cieux et la terre.
# Ajuste le regex selon le format exact de ton fichier texte
pattern = re.compile(r"^(.*?) (\d+):(\d+)\s+(.*)$")

with open(input_file, "r", encoding="utf-8") as f:
    for line in f:
        line = line.strip()
        if not line:
            continue
        match = pattern.match(line)
        if match:
            book = match.group(1)
            chapter = int(match.group(2))
            verse = int(match.group(3))
            text = match.group(4)
            bible_data.append({
                "book": book,
                "chapter": chapter,
                "verse": verse,
                "text": text
            })

# Sauvegarde en JSON
with open(output_file, "w", encoding="utf-8") as f:
    json.dump(bible_data, f, ensure_ascii=False, indent=2)

print(f"Conversion terminée ! {len(bible_data)} versets exportés dans {output_file}")

